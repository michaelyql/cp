{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "clang++",
            "args": [
                "${file}",
                "-Wall", 
                "-std=c++17",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-I/usr/local/include",
                "-I/usr/local/include/testlib-0.9.41/",
                "&&",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "<", 
                "${workspaceFolder}/tests/in",
                ">", 
                "${workspaceFolder}/tests/out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
